{
    "apps": {
        "name": "koa-blog",
        "script": "bin/www",
        "watch": true,
        "ignore_watch": [
            "node_modules",
            "logs"
        ],
        "instances": "max",
        "error_file": "logs/err.log",
        "out_file": "logs/out.log",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "exec_mode": "cluster",
        "env": {
            "NODE_ENV": "production"
         }
    }
}